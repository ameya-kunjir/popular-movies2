<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.android.popularmovies2.app.activity.MainActivity">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->

    <fragment
        android:id="@+id/fragment_movies"
        android:name="com.example.android.popularmovies2.app.fragment.FavouriteMoviesActivityFragment"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:layout="@layout/fragment_favourite_movies" />

    <FrameLayout
        android:id="@+id/favourite_movie_details"
        android:layout_width="480dp"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize" />

</LinearLayout>
